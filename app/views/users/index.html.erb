<% if current_user && current_user.role == "admin" %>
<h2>Users</h2>
<% else %>
<h2>Scoreboard</h2>
<% end %>

<table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Score</th>
        <th></th>
    </thead>
    <tbody>
      <% @users.each do |user| %>

      <tr>
          <td><%= user.try(:name) %></td>
          <td>
            <%= total_score(user) %> points
          </td>
          <td><%= link_to("Show User", user_path(user.id)) %> 
            <% if can? :destory, User %>
              <%= link_to("Delete", user_path(user.id), method: :delete) %>
            <% end %>
          </td>
        </tr>

      <% end %>
    </tbody>
  </table>