<table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Score</th>
        <th></th>

    </thead>
    <tbody>
      <% @users.sort_by{|a,b| total_score(b) <=> total_score(a)}.each do |user| %>

      <tr>
          <td><%= user.try(:name) %></td>
          <td>
            <%= total_score(user) %> points
          </td>
          <td><%= link_to("Show", user_path(user.id)) %></td>
        </tr>

      <% end %>
    </tbody>
  </table>