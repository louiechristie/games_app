<p id="notice"><%= notice %></p>

<h2>User</h2>

<p><strong>Name: </strong><%= @user.try(:name) %></p>

<% if current_user && (current_user == @user) %>
  <p><strong>Email: </strong><%= @user.try(:email) %></p>
<% end %>

<p><strong>Score: </strong><%= total_score(@user) %></p>

<% if current_user && (current_user == @user || current_user.role == "admin") %>
  <p>
    <%= link_to "Edit", edit_user_path %> 
    <% if can? :destory, User %>
      <%= link_to("Delete", user_path(@user.id), method: :delete) %>
    <% end %>
  </p>
<% end %>

<p><%= link_to "Home", games_path %></p>